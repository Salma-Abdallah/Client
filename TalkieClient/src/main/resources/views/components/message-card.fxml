<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<HBox fx:id="completeMessageHBox" nodeOrientation="LEFT_TO_RIGHT" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="senderImage" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" />
      <VBox fx:id="messageVBox" prefHeight="10.0" style="-fx-background-radius: 0 15 15 15; -fx-background-color: #04D4F03D;">
         <children>
            <HBox fx:id="senderInfoHBox" alignment="CENTER">
               <children>
                  <Label fx:id="senderNameLabel" style="colo: grey;" text="SenderName" textFill="#464646" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <Label fx:id="senderPhoneLabel" style="colo: grey;" text="SenderPhone" textFill="#464646" />
               </children>
               <VBox.margin>
                  <Insets bottom="3.0" left="5.0" right="5.0" />
               </VBox.margin>
            </HBox>
            <HBox fx:id="messageAttachmentHBox">
               <children>
                  <ImageView fx:id="fileIconImageView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                  <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="fileNameLabel" text="FileName">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="fileSizeLabel" text="FileSize" textFill="#464646" />
                     </children>
                     <padding>
                        <Insets left="15.0" top="3.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
            <TextFlow fx:id="messageContentTextFlow">
               <children>
                  <Text fx:id="messageText" strokeType="OUTSIDE" strokeWidth="0.0" text="hsdgjfasad fsdfa  sadhkfgj sadhjkfhsd jahjkl jksda hjjkas hdjk hasdjk f hjk asf hjf jksdjkfasd hjkfasdkhjsdfa hkjsdf ajkhsf ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Text>
               </children>
            </TextFlow>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="messageTimeLabel" style="colo: grey;" text="messageTime" textFill="#464646">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Pane HBox.hgrow="ALWAYS" />
                  <ImageView fx:id="messageStatusImageView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/message-status-seen.png" />
                     </image>
                  </ImageView>
               </children>
               <VBox.margin>
                  <Insets bottom="3.0" left="5.0" right="5.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
         <HBox.margin>
            <Insets right="100.0" />
         </HBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets top="2.0" />
   </padding>
</HBox>
