<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="messageAttachmentHBox" style="-fx-border-color: #E0E0E0; -fx-background-radius: 20; -fx-border-color: #549BAD; -fx-border-radius: 20;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="fileIconImageView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
      <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="fileNameLabel" text="FileName">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="fileSizeLabel" text="FileSize" textFill="#464646" />
         </children>
         <padding>
            <Insets left="15.0" top="3.0" />
         </padding>
      </VBox>
   </children>
</HBox>
